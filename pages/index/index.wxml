<view class="floor">
    <image src="/images/dontlook.jpg"></image>
</view>
<view class="container">
    <view class="dotsWrap">
        <view class="dots">
            <text></text>
            <text class="cur"></text>
        </view>
    </view>
    <swiper circular="true" autoplay="false" duration="200">
        <block>
            <swiper-item>
                <view class="mainContent">
                    <image src="/images/qing.png"></image>
