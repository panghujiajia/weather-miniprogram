                    <view class="mainInfoWrap">
                        <view class="address">
                            <text class="iconfont icon-location"></text>
                            <text>武汉市 洪山区</text>
                        </view>
                        <view class="weather">
                            <view class="temperature">9<text></text></view>
                            <view class="description">晴</view>
                            <view class="range">7°~20°</view>
                        </view>
                    </view>
                </view>
                <view class="daysWeather">
                    <view class="tabs">
                        <text data-tabindex="{{item.tabIndex}}" class="{{item.tabIndex == curIndex ? 'cur' : ''}}"
                            bindtap="changeTabs" wx:for="{{tabData}}" wx:key="key">{{item.tabName}}</text>
                    </view>
                    <scroll-view class="scrollBox" wx:if="{{curIndex == 1}}" scroll-x="true">
                        <view class="weatherBox">
                            <view class="weatherInfo">
                                <!-- <image src="/images/icon/00晴.png"></image> -->
